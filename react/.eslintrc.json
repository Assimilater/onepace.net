{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "array-element-newline": "error",
    "array-bracket-newline": [
      "error",
      {
        "minItems": 2
      }
    ],
    "arrow-parens": [
      "error",
      "always"
    ],
    "arrow-spacing": "error",
    "brace-style": "error",
    "comma-spacing": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "key-spacing": "error",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-console": [
      "warn",
      {
        "allow": [
          "info",
          "error"
        ]
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-trailing-spaces": "error",
    "object-property-newline": "error",
    "object-curly-newline": [
      "error",
      {
        "minProperties": 2,
        "consistent": true
      }
    ],
    "padded-blocks": [
      "error",
      "never"
    ],
    "prefer-const": "error",
    "prefer-destructuring": "error",
    "react/prop-types": 0,
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "quote-props": "error",
    "max-statements-per-line": [
      "error",
      {
        "max": 1
      }
    ],
    "keyword-spacing": 2
  }
}
